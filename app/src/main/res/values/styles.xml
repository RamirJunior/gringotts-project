<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyNewTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/gold</item>
        <item name="colorPrimaryDark">@color/gold</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorPrimaryVariant">@color/gold</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/gold</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

    <style name="Widget.MyApp.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        ...
        <item name="materialThemeOverlay">@style/ThemeOverlay.MyApp.Chip.Choice</item>
    </style>

    <style name="ThemeOverlay.MyApp.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="elevationOverlayEnabled">false</item>
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
    </style>

</resources>
