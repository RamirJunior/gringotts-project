<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_navigation"
    app:startDestination="@id/loginFragment2">

    <fragment
        android:id="@+id/loginFragment2"
        android:name="alura.com.gringotts.view.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment2_to_esqueciMinhaSenhaFragment"
            app:destination="@id/esqueciMinhaSenhaFragment" />
        <action
            android:id="@+id/action_loginFragment2_to_home_navigation"
            app:destination="@id/home_navigation"
            app:popUpTo="@id/loginFragment2"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment2_to_criarContaFragment"
            app:destination="@id/criarContaFragment" />
    </fragment>
    <fragment
        android:id="@+id/esqueciMinhaSenhaFragment"
        android:name="alura.com.gringotts.view.EsqueciMinhaSenhaFragment"
        android:label="fragment_esqueci_minha_senha"
        tools:layout="@layout/fragment_esqueci_minha_senha" />
    <include app:graph="@navigation/home_navigation" />
    <fragment
        android:id="@+id/criarContaFragment"
        android:name="alura.com.gringotts.view.CriarContaFragment"
        android:label="fragment_criar_conta"
        tools:layout="@layout/fragment_criar_conta" />
</navigation>