<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.HomeFragment" >
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_balance"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        card_view:cardCornerRadius="4dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:text="@string/principais"
            android:textAlignment="center" />
    </androidx.cardview.widget.CardView>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:stretchColumns="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view_balance">

        <TableRow android:layout_height="91dp">

            <TextView
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:text="@string/principais"
                android:textAlignment="center" />

            <TextView
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:text="@string/produtosInvestimentos"
                android:textAlignment="center" />

            <TextView
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:text="@string/servicos"
                android:textAlignment="center" />
        </TableRow>

        <TableRow android:layout_height="91dp">

            <TextView
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:text="@string/transferencias"
                android:textAlignment="center" />

            <TextView
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:text="@string/cartoes"
                android:textAlignment="center" />

            <TextView
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:text="@string/pagarContas"
                android:textAlignment="center" />
        </TableRow>

        <TableRow android:layout_height="91dp">

            <TextView
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:text="@string/recargas"
                android:textAlignment="center" />

            <TextView
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:text="@string/adicionarDinheiro"
                android:textAlignment="center" />

            <TextView
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:text="@string/pixQrCode"
                android:textAlignment="center" />
        </TableRow>


    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>